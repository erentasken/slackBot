@page
@model botApp.Pages.messageSenderModel

@{
	ViewData["Title"] = "Message sender";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-lg-6">
            <form method="POST">
                <h1 class="display-4 text-center">Mesaj Gönderme Aracı</h1>
                
                <div class="mb-3">
                    <label for="fileName" class="form-label">Gönderilecek Mesaj:</label>
                    <input type="text" class="form-control" name="message" />
                </div>

                <div class="mb-3">
                    <label for="fileName" class="form-label">Gönderilecek Kanallar:</label>
                    <input type="text" class="form-control" name="channelNames" />
                </div>

                <div class="text-center">
                    <button type="submit" class="btn btn-primary" name="Edit" asp-page-handler="Edit">Kanala Mesaj Gönder</button>
                </div>
            </form>
        </div>
    </div>
</div>
