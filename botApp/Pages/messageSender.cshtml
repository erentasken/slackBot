@page
@model botApp.Pages.MessageSenderModel

@{
    ViewData["Title"] = "Message sender";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-lg-6">
            <form method="POST">
                <h1 class="display-4 text-center">Mesaj Gönderme Aracı</h1>
                <hr />
                <div class="mb-3">
                    <label for="fileName" class="form-label">Gönderilecek Mesaj:</label>
                    <input type="text" class="form-control" name="message" value=""/>
                </div>

                <div class ="mb-3">
                    <label for="fileName" class="form-label">Kanalları Seçiniz:</label>
                    @{
                        var messageSender = new MessageSenderModel(); 
                        var channelNames = await messageSender.FetchChannelNamesAsync(); 

                        if (channelNames != null)
                        {
                            for (int i = 0; i < channelNames.Length; i++)
                            {
                                <input type="checkbox" name="channelNames" value="@channelNames[i]">
                                <label for="channelNames">@channelNames[i]</label>
                            }
                        }
                    }
                </div>

                <div class="text-center">
                    <button type="submit" class="btn btn-primary" name="Edit" asp-page-handler="Edit">Kanala Mesaj Gönder</button>
                </div>
                 
            </form>
        </div>
    </div>
</div>